{
  "version": 2,
  "framework": "angular",
  "buildCommand": "cd frontend && npm ci && npm run build:prod",
  "outputDirectory": "frontend/dist/interface-configuration/browser",
  "installCommand": "cd frontend && npm ci",
  "build": {
    "env": {
      "NODE_VERSION": "22"
    }
  },
  "cleanUrls": true,
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/[...path].ts": {
      "includeFiles": "api/**"
    }
  }
}

